@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

@code {
    private bool IsAuthPage => NavigationManager.Uri.EndsWith("/") || NavigationManager.Uri.EndsWith("/register");
}

<div class="page">
    @if (!IsAuthPage)
    {
        <div class="sidebar">
            <NavMenu/>
        </div>
    }

    <main>
        @if (!IsAuthPage)
        {
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
        }
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

